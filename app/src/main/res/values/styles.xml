<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="welcomeStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--city name style-->
    <style name="cityStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <!--RadioButton style-->
    <style name="rad_style">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:onClick">onRadioButtonClicked</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>



    <!--button name style-->
    <style name="buttonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:padding">20dp</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_category_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#aaa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="img_btn">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>



    <style name="city_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">2dp</item>
    </style>
</resources>
